#!/usr/bin/env bash

# Display User Information Script
#
# Description:
#   This script reads the contents of the file /etc/passwd and displays
#   the username, user ID, and home directory path for each user.
#
# Usage:
#   Ensure that you have appropriate permissions to read the file /etc/passwd.
#   Run the script using Bash: ./script_name.sh
#

# Read each line of the /etc/passwd file, using ":" as the delimiter
while IFS=: read line; do
	# Extract username, user ID, and home directory path using cut command
	# The fields are separated by ":" in the /etc/passwd file
	user_info=$(echo "$line" | cut -d ":" -f 1,3,6)

	# Print the extracted user information
	echo "$user_info"
done </etc/passwd
